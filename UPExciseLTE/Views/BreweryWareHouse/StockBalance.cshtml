@model IEnumerable<UPExciseLTE.Models.UnitMaster>

@{
    ViewBag.Title = "StockBalance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("StockBalance", "BreweryWareHouse", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Stock Balance
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">            
                        <table class="table table-striped table-bordered table-hover">
                            <tr>                                
                                <th>
                                    Brand Name
                                </th>
                                <th>
                                    Bottel Balance
                                </th> 
                            </tr>
                            @foreach (var item in @ViewBag.StockBalance)
                            {
                                <tr>
                                    <td>
                                        item.BrandName
                                    </td>
                                    <td>
                                        item.BottelBal
                                    </td>                                   
                               
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

