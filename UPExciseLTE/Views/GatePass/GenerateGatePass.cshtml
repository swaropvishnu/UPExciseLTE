@model  List<UPExciseLTE.Models.GatePass>
               
    @{
        ViewBag.Title = "GenerateGatePass";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @using (Html.BeginForm("GenerateGatePass", "GatePass", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="page-content-inner">
            <div class="row ">
                <div class="col-md-12">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>Generate Gatepass
                            </div>
                        </div>

                        <div class="portlet-body">
                            <div>
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>

                                            <th>
                                                Date
                                            </th>
                                            <th>
                                                Consignor Name
                                            </th>
                                            <th>
                                                Consinee Name
                                            </th>
                                            <th>
                                                TotalBox
                                            </th>
                                            <th>
                                                Total Bottels/Can
                                            </th>
                                            <th>
                                                TotalLitres
                                            </th>
                                            <th>
                                                ConsiderationFees
                                            </th>
                                            <th>
                                                Vehicle Number
                                            </th>
                                            <th>
                                                Vehicle Agency Details
                                            </th>
                                            <th></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem=>item.ToDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ConsignorName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ConsigneeName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalBox)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalBottles)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TotalLitres)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ConsiderationFees)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.VehicleNo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AgencyNameAndAddress)
                                                </td>
                                                <td>
                                                    <button type="button" class="btn green" onclick="window.location.href='@Url.Action("GatePassReport","Report", new {GatePass = item.Encrypt_GatePassID })'">Generate Gatepass</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

