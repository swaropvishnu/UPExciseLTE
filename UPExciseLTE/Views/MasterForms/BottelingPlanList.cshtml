@model IEnumerable<UPExciseLTE.Models.BottelingPlan>

@{
    ViewBag.Title = "Edit/Finalize Botteling Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BrandMaster", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Edit/Finalize Botteling Plan
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">
                        <div class="form-body">
						<div class="row">
                            <div class="form-group col-md-4">
                                <label class="control-label">From Date</label>
                                @Html.TextBox("From Date", "", new { @id = "txtFromDate", @class = "form-control", @required = "required", @Value = "", @type = "date" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">To Date</label>
                                @Html.TextBox("To Date", "", new { @id = "txtToDate", @class = "form-control", @required = "required", @Value = "", @type = "date" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Brand</label>
                                @Html.DropDownList("Brand", (IEnumerable<SelectListItem>)ViewBag.Brand, new { @id = "ddlBrewery", @class = "form-control" })
                            </div>
							</div>
							<div class="row">
                            <div class="form-group col-md-4">
                                <label class="control-label"> Mapped/ Unmapped </label>
                                @Html.DropDownList("MapUnMaped", new List<SelectListItem> { new SelectListItem { Text = "--Both--", Value = "B" }, new SelectListItem { Text = "Mapped", Value = "Mapped" }, new SelectListItem { Text = "UnMapped", Value = "UnMapped" } }, new { @id = "ddlMaped", @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Import/Export</label>
                                @Html.DropDownList("Import", new List<SelectListItem> { new SelectListItem { Text = "--Both--", Value = "B" }, new SelectListItem { Text = "For UP", Value = "UP" }, new SelectListItem { Text = "For Outside UP", Value = "Outside" } }, new { @id = "ddlImport", @class = "form-control" })
                            </div>
							</div>
                        </div>
                        <div class="clearfix"></div>
                          <center>
                        <div class="form-actions">
                            <button type="submit" class="btn green">Search</button>
                            <button type="button" class="btn default" style="background-color: crimson;color:white">Reset</button>
                        </div>
                    </center>
                    </div>
                    <div class="portlet-body">
                        <div>
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                   
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.PlanId)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.DateOfPlan1)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.LiquorType)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.LicenceType)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Brand)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Capacity)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Quantity)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.PlanNoofBottling)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.NumberOfCases)
                                    </th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                       

                                        <td>
                                            @Html.DisplayFor(modelItem => item.PlanId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfPlan1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LiquorType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LicenceType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Brand)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Capacity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PlanNoofBottling)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumberOfCases)
                                        </td>
                                        <td>
                                            @if (item.Status == "UNP")
                                            {
                                                <button type="button" class="btn green" onclick="load('@item.EncPlanId')">Edit</button>
                                            }
                                            else if (item.Status == "FIP")
                                            {
                                                <button type="button" class="btn green" onclick="Production('@item.EncPlanId')">Production</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn green" disabled="disabled">Production</button>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "UNP")
                                            {
                                                <button type="button" class="btn default" style="background-color: crimson;color:white"  onclick="Confirm('@item.EncPlanId')">Finalize</button>
                                            }
                                            else if (item.Status == "FIP")
                                            {
                                                <button type="button" class="btn default" style="background-color: crimson;color:white" onclick="FreezePlan('@item.EncPlanId')">Freeze</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn default" style="background-color: crimson;color:white" disabled="disabled">Production</button>                                                
                                            }
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function load(PlanId)
    {
        window.location = "../MasterForms/UpdateBottelingPlan?A=" + PlanId;
    }
    function Production(PlanId)
    {
        window.location = "../MasterForms/ProductionEntry?A=" + PlanId;
    }
    function FinalizePlan(PlanId) {
        $.ajax({
            url: '/MasterForms/FinalizePlan',
            data: { 'PlanId': PlanId },
            datatype: "json",
            type: "GET",
            success: function (data) {
                alert(data);
                window.location = "../MasterForms/BottelingPlanList";
            },
            error: function (data) {
                alert("Error in Finalize Plan Loading");
            }
        });
    }
    function FreezePlan(PlanId) {
        $.ajax({
            url: '/MasterForms/FreezePlan',
            data: { 'PlanId': PlanId },
            datatype: "json",
            type: "GET",
            success: function (data) {
                alert(data);
                window.location = "../MasterForms/BottelingPlanList";
            },
            error: function (data) {
                alert("Error in Finalize Plan Loading");
            }
        });
    }
    function Confirm(EncPlanId) {
        var r = confirm("Are You sure to finalize this plan. Once its final you cannot edit this plan.");
        if (r == true) {
            FinalizePlan(EncPlanId);
        }
    }
</script>
