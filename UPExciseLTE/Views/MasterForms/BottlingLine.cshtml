@model UPExciseLTE.Models.BottlingLine
@{
    ViewBag.Title = "Botteling Line Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.Msg != null && ViewBag.Msg != string.Empty)
    {
        <script type="text/javascript"> var msg = '@ViewBag.Msg'; alert(msg);</script>
    }
}
 
@using (Html.BeginForm("BottlingLine", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <span><i class="fa fa-gift"></i>&nbsp; Botteling Line Master&nbsp; (@UserSession.LoggedInUserName.ToString())</span>
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color:#f5f5f5">
                        <div class="form-body">
                            @Html.HiddenFor(model => model.BottlingLineId, new { @id = "hfBottlingLineId" })
                            @Html.HiddenFor(model => model.Type, new { @id = "hfBottlingLineType" })
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label class="control-label">Bottling Tank<b style="color:red; font-weight:800">*</b></label>
                                    @Html.DropDownListFor(m => m.BBTId, (IEnumerable<SelectListItem>)ViewBag.BBT, new { @id = "ddlBBT", @class = "form-control" })
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label">Botteling Line Name<b style="color:red; font-weight:800">*</b></label>
                                    @Html.TextBoxFor(model => model.BottlingLineName, new { @class = "form-control", @id = "txtBottlingLineName" })
                                </div>
                                 
                                <div class="form-group col-md-4" style="display:none;">
                                    <label class="control-label">Brewery</label>
                                    <div>
                                        @Html.DropDownListFor(m => m.UnitId, (IEnumerable<SelectListItem>)ViewBag.Brewery, new { @id = "ddlBrewery", @class = "form-control", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                            <center>
                                <div>
                                    <button type="submit" class="btn green" onclick="return Validate();" id="btnSubmit">Save</button>
                                    <button type="button" class="btn danger" style="background-color:crimson; color:white">Reset</button>
                                </div>
                            </center>
                        </div>
                        <div>
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>Bottling Line Id</th>
                                    <th>BBT Name</th>
                                    <th>Bottling Line Name</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                @if (ViewBag.UnitTank != null)
                                {
                                    foreach (BottlingLine dr in (ViewBag.UnitTank as List<BottlingLine>))
                                    {
                                        <tr>
                                            <td>@dr.BottlingLineId</td>
                                            <td>@dr.BBT</td>
                                            <td>@dr.BottlingLineName</td>
                                             <td><button type="button" class="btn green" onclick="UnitTankDetails('@dr.EncBottlingLineId','E')">Edit</button></td>
                                            @if (dr.BottlingLineStatus == "A")
                                            {
                                                <td><button type="button" class="btn danger" style="background-color:crimson; color:white" onclick="UnitTankDetails('@dr.EncBottlingLineId','D')">Deactive</button></td>
                                            }
                                            else
                                            {
                                                <td><button type="button" class="btn green" onclick="UnitTankDetails('@dr.EncBottlingLineId','A')">Active</button></td>
                                            }
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function UnitTankDetails(UTId, Status)
    {
        if (Status == 'E') {
            window.location.assign("../masterforms/BottlingLine?A=" + UTId)
            //window.location("UnitTank?A=" + UTId);
        }
        else {
            $.ajax({
                url: '/MasterForms/UpdateBottlingLine',
                data: { 'UTId': UTId, 'Status': Status },
                datatype: "json",
                type: "GET",
                success: function (data) {
                    alert(data);
                    window.location = "../MasterForms/BottlingLine";
                },
                error: function (data) {
                    alert("Error in Bottling Line Loading");
                }
            });
        }
    }
    function Validate()
    {
        document.getElementById("txtBottlingLineName").value = document.getElementById("txtBottlingLineName").value.trim();
        
        if (document.getElementById("txtBottlingLineName").value == "") {
            alert("Please Enter Bottling Line Name");
            document.getElementById("txtBottlingLineName").focus();
            return false;
        }
        
    }
</script>
