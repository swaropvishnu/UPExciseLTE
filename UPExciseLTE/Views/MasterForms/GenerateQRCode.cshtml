@model IEnumerable<UPExciseLTE.Models.BottelingPlan>

@{
    ViewBag.Title = "Generate And Download QR Code";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("GenerateQRCode", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Generate And Download QR Code
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">
                        <div class="form-body">
                            <div class="form-group col-md-4">
                                <label class="control-label">From Date</label>
                                @Html.TextBox("From Date", "", new { @id = "txtFromDate", @class = "form-control", @required = "required", @Value = "", @type = "date" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">To Date</label>
                                @Html.TextBox("To Date", "", new { @id = "txtToDate", @class = "form-control", @required = "required", @Value = "", @type = "date" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Brand</label>
                                @Html.DropDownList("Brand", (IEnumerable<SelectListItem>)ViewBag.Brand, new { @id = "ddlBrewery", @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label"> Mapped/ Unmapped</label>
                                @Html.DropDownList("MapUnMaped", new List<SelectListItem> { new SelectListItem { Text = "--Both--", Value = "B" }, new SelectListItem { Text = "Mapped", Value = "Mapped" }, new SelectListItem { Text = "UnMapped", Value = "UnMapped" } }, new { @id = "ddlMaped", @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Import/Export</label>
                                @Html.DropDownList("Import", new List<SelectListItem> { new SelectListItem { Text = "--Both--", Value = "B" }, new SelectListItem { Text = "For UP", Value = "UP" }, new SelectListItem { Text = "For Outside UP", Value = "Outside" } }, new { @id = "ddlImport", @class = "form-control" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <center>
                            <div class="form-actions">
                                <button type="submit" class="btn green">Search</button>
                                <button type="button" class="btn default" style="background-color: crimson;color:white">Reset</button>
                            </div>
                        </center>
                    </div>
                    <div class="portlet-body">
                        <div>
                            <table class="table table-striped table-bordered table-hover">
                                <tr>

                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.PlanId)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.DateOfPlan1)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Brand)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.NumberOfCases)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.ProducedNumberOfCases)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.TotalUnitQuantity)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.ProducedTotalUnitQuantity)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.WastageInNumber)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.WastageBL)
                                    </th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PlanId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfPlan1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Brand)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumberOfCases)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProducedNumberOfCases)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalUnitQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProducedTotalUnitQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WastageInNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WastageBL)
                                        </td>
                                        <td>
                                            @if (item.Status == "P")
                                            {
                                                <button type="button" class="btn default" style="background-color: crimson;color:white" onclick="Confirm('@item.EncPlanId')">Generate QR Code</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn default" style="background-color: crimson;color:white" disabled="disabled">QR Code Generated</button>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "P")
                                            {
                                                <button type="button" class="btn green" disabled="disabled">Download QR Code</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn green"  onclick="DownloadExcel('@item.EncPlanId')">Download QR Code</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
 
<script type="text/javascript">
    function Confirm(EncPlanId) {
        var r = confirm("Are You sure to generate QRCode");
        if (r == true) {
            GenreateQR(EncPlanId);
        }
    }
    function GenreateQR(PlanId) {
        $.ajax({
            url: '/MasterForms/GenreateQR',
            data: { 'PlanId': PlanId },
            datatype: "json",
            type: "GET",
            success: function (data) {
                alert(data);
                window.location = "../MasterForms/GenerateQRCode";
            },
            error: function (data) {
                alert("Error in Finalize Plan Loading");
            }
        });
    }
    function DownloadExcel(PlanId) {
        $.ajax({
            url: '/MasterForms/DownloadExcel',
            data: { 'PlanId': PlanId },
            datatype: "json",
            type: "GET",
            success: function (data) {
                alert(data);
                window.location = "../MasterForms/GenerateQRCode";
            },
            error: function (data) {
                alert("Error in Finalize Plan Loading");
            }
        });
    }
</script>