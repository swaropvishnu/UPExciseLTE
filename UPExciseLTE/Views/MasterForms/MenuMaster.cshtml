@model IEnumerable<UPExciseLTE.Models.MenuMst>

@{
    ViewBag.Title = "Menu Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("MenuMaster", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Menu Master
                        </div>
                    </div>

                    <div class="portlet-body" style="overflow:scroll">
                        <div class="form-body">
                            @Html.ActionLink("Create New", "Create")
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.MenuId)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.Text)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.ParentId)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.NavUrl)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.Enable)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.ShowToAll)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.ShowInMenu)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.OrderBy)
                                    </th>
                                    <th style="width:10%">
                                        @Html.DisplayNameFor(model => model.Icon)
                                    </th>
                                    <th style="width:10%"></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MenuId)
                                        </td>
                                        <td>
                                            @*<div style="overflow-wrap:break-word; width:50px">*@
                                                @Html.DisplayFor(modelItem => item.Text)
                                            @*</div>*@
                                        </td>
                                        <td>
                                            @*<div style="overflow-wrap:break-word; width:50px">*@
                                            @Html.DisplayFor(modelItem => item.Description)
                                            @*</div>*@

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ParentId)
                                        </td>
                                        <td>
                                            @*<div style="overflow-wrap:break-word; width:50px">*@
                                                @Html.DisplayFor(modelItem => item.NavUrl)
                                            @*</div>*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Enable)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShowToAll)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShowInMenu)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderBy)
                                        </td>
                                        <td>
                                            <div>
                                                @Html.DisplayFor(modelItem => item.Icon)
                                            </div>
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
