@model IEnumerable<UPExciseLTE.Models.BottelingPlan>

@{
    ViewBag.Title = "Search Production";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Content/DateCalender/jquery-ui.css" rel="stylesheet" />
