@model IEnumerable<UPExciseLTE.Models.UTTransferToBBT>

@{
    ViewBag.Title = "UT Transfer To BT Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UTTransferToBBTDetails", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Unit Tank Transfer To Bottling Tank Details
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">
                        <div style="display:none">
                            <div class="form-body">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">From Date</label>
                                        @Html.TextBox("txtFromDate", "", new { @class = "form-control", @id = "txtFromDate", @placeholder = "dd/MM/yyyy" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">To Date</label>
                                        @Html.TextBox("txtToDate", "", new { @class = "form-control", @id = "txtToDate", @placeholder = "dd/MM/yyyy" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Unit Tank</label>
                                        @Html.DropDownList("ddlUnitTank", (IEnumerable<SelectListItem>)ViewBag.UnitTank, new { @id = "ddlUnitTank", @class = "form-control", @required = "required", @placeholder = "dd/MM/yyyy" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Bottling Tank</label>
                                        @Html.DropDownList("ddlBBT", (IEnumerable<SelectListItem>)ViewBag.BBT, new { @id = "ddlBBT", @class = "form-control", @required = "required", @placeholder = "dd/MM/yyyy" })
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <center>
                                <div class="form-actions">
                                    <button type="submit" class="btn green">Search</button>
                                    <button type="button" class="btn danger" style="background-color:crimson; color:white">Reset</button>
                                </div>
                            </center>
                        </div>
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Srno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitTank)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BBTName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransferDate1)
                                </th>
                                 
                                <th>
                                    @Html.DisplayNameFor(model => model.PrevBalanceBBT)
                                </th>
                                <th>
                                    Transfer BL
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Wastage)
                                </th>
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.CurrentBalanceBBT)
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Srno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitTank)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BBTName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransferDate1)
                                    </td>
                                     
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrevBalanceBBT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IssueBL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Wastage)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CurrentBalanceBBT)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
