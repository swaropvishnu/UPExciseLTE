@model UPExciseLTE.Models.UnitTank
@using System.Data;
@{
    ViewBag.Title = "Unit Tank";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.Msg != null && ViewBag.Msg != string.Empty)
    {
        <script type="text/javascript"> var msg = '@ViewBag.Msg'; alert(msg);</script>
    }
}
<script type="text/javascript">
    function isfloatNumber(txt, evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode == 46) {
            //Check if the text already contains the . character
            if (txt.value.indexOf('.') === -1) {
                return true;
            } else {
                return false;
            }
        } else {
            if (charCode > 31
                && (charCode < 48 || charCode > 57))
                return false;
        }
        return true;
    }
</script>
@using (Html.BeginForm("UnitTank", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <span><i class="fa fa-gift"></i>&nbsp; Unit Tank Master&nbsp; (@UserSession.LoggedInUserName.ToString())</span>
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color:#f5f5f5">
                        <div class="form-body">
                            @Html.HiddenFor(model =>model.UnitTankId,new { @id="hfUnitTankId" } )
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label class="control-label">Unit Tank Name</label>
                                    @Html.TextBoxFor(model => model.UnitTankName, new { @class = "form-control", @id = "txtUnitTank" } )
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label">Unit Tank Capacity</label>
                                    @Html.TextBoxFor(model => model.UnitTankCapacity, new {  @class = "form-control", @id = "txtUnitTankCapacity" } )
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label">Unit Tank Bulk Liter</label>
                                    @Html.TextBoxFor(model => model.UnitTankBulkLiter, new {  @class = "form-control", @id = "txtUnitTankBulkLiter" } )
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label class="control-label">Unit Tank Strength</label>
                                    @Html.TextBoxFor(model => model.UnitTankStrength, new {   @class = "form-control", @id = "txtUnitTankStrength" } )
                                </div>
                                <div class="form-group col-md-4" style="display:none;">
                                    <label class="control-label">Brewery</label>
                                    <div>
                                        @Html.DropDownListFor(m => m.BreweryId, (IEnumerable<SelectListItem>)ViewBag.Brewery, new { @id = "ddlBrewery", @class = "form-control", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                            <center>
                                <div>
                                    <button type="submit" class="btn green">Save</button>
                                    <button type="button" class="btn danger" style="background-color:crimson; color:white">Reset</button>
                                </div>
                            </center>
                        </div>
                        <div>
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>Unit Tank Id</th>
                                    <th>Unit Tank Name</th>
                                    <th>Unit Tank Capacity</th>
                                    <th>Unit Tank Bulk Liter</th>
                                    <th>Unit Tank Strength</th>  
                                    <th></th>
                                    <th></th>
                                </tr>
                                @if (ViewBag.UnitTank != null)
                                {
                                    foreach (UnitTank dr in (ViewBag.UnitTank as List<UnitTank>))
                                    {
                                    <tr>
                                        <td>@dr.UnitTankId</td>
                                        <td>@dr.UnitTankName</td>
                                        <td>@dr.UnitTankCapacity</td>
                                        <td>@dr.UnitTankBulkLiter</td>
                                        <td>@dr.UnitTankStrength</td>
                                        <td><button type="button" class="btn green" onclick="UnitTankDetails('@dr.Enc_UnitTankId','E')">Edit</button></td>
                                        <td><button type="button" class="btn danger" style="background-color:crimson; color:white" onclick="UnitTankDetails('@dr.Enc_UnitTankId','D')">Delete</button></td>
                                    </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function UnitTankDetails(UTId, Status)
    {
        if (Status = 'E') {
            
            window.location.assign("../masterforms/UnitTank?A=" + UTId)
            //window.location("UnitTank?A=" + UTId);
        }
    }
</script>
