@model IEnumerable<UPExciseLTE.Models.UnitTankBLDetail>

@{
    ViewBag.Title = "Unit Tank Receive Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UnitTankRecevDetails", "MasterForms", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Unit Tank Receive Details
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">
                        <div class="form-body">
                            <div class="form-group col-md-4">
                                <label class="control-label">From Date</label>
                                @Html.TextBox("txtFromDate","", new { @class = "form-control", @id = "txtFromDate", @placeholder = "dd/MM/yyyy" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">To Date</label>
                                @Html.TextBox("txtToDate", "", new { @class = "form-control", @id = "txtToDate", @placeholder = "dd/MM/yyyy" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Unit Tank</label>
                                @Html.DropDownList("ddlUnitTank", (IEnumerable<SelectListItem>)ViewBag.UnitTank, new { @id = "ddlUnitTank", @class = "form-control", @required = "required", @placeholder = "dd/MM/yyyy" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <center>
                            <div class="form-actions">
                                <button type="submit" class="btn green">Search</button>
                                <button type="button" class="btn danger" style="background-color:crimson; color:white">Reset</button>
                            </div>
                        </center>
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitTank)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EntryDate1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitTankCapacity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Strength)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Receive)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Balance)
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitTank)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.EntryDate1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitTankCapacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Strength)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Receive)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Balance)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}