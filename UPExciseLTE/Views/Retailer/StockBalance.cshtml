 
@{

    ViewBag.Title = "StockBalance";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Data.DataTable dt = ViewData["StockBalance"] as System.Data.DataTable;
}

@using (Html.BeginForm("StockBalance", "UnitWareHouse", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-content-inner">
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Stock Register (Current Balance)
                        </div>
                    </div>
                    <div class="portlet-body form" style="background-color: #f5f5f5">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    Brand Name
                                </th>
                                <th>
                                    Capacity
                                </th>
                                <th>
                                    Strength of Alcohol
                                </th>
                                <th>
                                    Packaging Type
                                </th>
                                <th style="color:#b32121">
                                    Available Stock (Box)
                                </th>
                                <th style="color:#b32121">
                                    Available Stock (Bottel / Can)
                                </th>
                                <th style="color:#b32121">
                                    Damage Stock (Bottel / Can)
                                </th>
                            </tr>
                            @foreach (System.Data.DataRow item in dt.Rows)
                            {
                                
                            <tr>
                                <td>
                                    @item["Brand"].ToString()
                                </td>
                                <td>
                                    @item["Capacity"]
                                </td>
                                <td>
                                    @item["AlcoholType"]
                                </td>
                                <td>
                                    @item["PackagingType"]
                                </td>
                                <td>
                                    @item["CaseBal"]
                                </td>
                                <td>
                                    @item["BottelBal"]
                                </td>
                                <td>
                                    @item["DamageBottelBal"]
                                </td>
                            </tr>
                            
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

