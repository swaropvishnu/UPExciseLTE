@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_NoneLayout.cshtml";
}


<!DOCTYPE html>

<html lang="en">
<head>
    
</head>
<!-- END HEAD -->

<body class=" page-404-3">
    <div class="page-inner">
        <div class="container error-404">
            <h1>401</h1>
            <h2>Houston, we have a problem.</h2>
            <p> Actually, the page you are looking for does not exist. </p>
            <p>
                <a href="/Login/Login" class="btn red btn-outline"> Return home </a>
                <br>
            </p>
        </div>
       
        <h4>Error Details:</h4>
        <p>Controller Name: @Model.ControllerName</p>
        <p>Action Name: @Model.ActionName</p>
        <p>Exception: @Model.Exception</p> 
        @{ 
            FormsAuthentication.SignOut();
            // Second we clear the principal to ensure the user does not retain any authentication
            //required NameSpace: using System.Security.Principal;
            Session.Clear();
            System.Web.HttpContext.Current.Session.RemoveAll();
            // Last we redirect to a controller/action that requires authentication to ensure a redirect takes place
            // this clears the Request.IsAuthenticated flag since this triggers a new request
            Session.Abandon(); // it will clear the session at the end of request
        }

        <center>
            <img src="../Content/assets/pages/media/pages/earth.jpg" class="img-responsive" alt="" style="height:500px">
        </center>
    </div>
    
    
</body>

</html>